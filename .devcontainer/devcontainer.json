{

	"name": "Veloris CMS Dev Workspace",
	"build": {
		"dockerfile": "./Dockerfile",
		"context": ""
	},
	
	"runArgs": ["--interactive", "--tty"],
	// "postCreateCommand": "/usr/local/bin/startup.sh",
	"postStartCommand": "/usr/local/bin/startup.sh",
	"remoteUser": "root",
	"forwardPorts": [3000],
	"workspaceFolder": "/app",
	"customizations": {
		"vscode": {
			"extensions": [
				"amodio.tsl-problem-matcher",
				"antfu.goto-alias",
				"christian-kohler.npm-intellisense",
				"christian-kohler.path-intellisense",
				"codypwakeford.nuxt-component-docs",
				"eamodio.gitlens",
				"ecmel.vscode-html-css",
				"esbenp.prettier-vscode",
				"formulahendry.auto-rename-tag",
				"github.vscode-pull-request-github",
				"mhutchie.git-graph",
				"ms-azuretools.vscode-docker",
				"ms-vscode.cpptools",
				"ms-vscode.extension-test-runner",
				"ms-vscode.vscode-typescript-next",
				"ms-vsliveshare.vsliveshare",
				"peterhdd.firebase-firestore-snippets",
				"platformio.platformio-ide",
				"pranaygp.vscode-css-peek",
				"ritwickdey.liveserver",
				"sidthesloth.html5-boilerplate",
				"skyboost.nuxt-3-goto",
				"syler.sass-indented",
				"tal7aouy.icons",
				"tyriar.luna-paint",
				"vue.volar",
				"yoavbls.pretty-ts-errors"
			]

		}
	}

}

